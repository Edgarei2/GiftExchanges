<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="font_size_28">
        <item name="android:textSize">14dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="font_size_36">
        <item name="android:textSize">18dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <!--自定义用于去除背景-->
    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item><!--去除边框-->
        <item name="android:windowIsFloating">true</item><!--浮现在activity上-->
        <item name="android:windowIsTranslucent">false</item><!--窗口不透明-->
        <item name="android:windowNoTitle">true</item><!--去除标题-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--背景颜色透明-->
        <item name="android:backgroundDimEnabled">true</item><!--Dialog以外区域模糊-->
    </style>
</resources>