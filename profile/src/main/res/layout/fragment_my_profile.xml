<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/account_status_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="您还未登录！"
        android:visibility="gone"
        android:textSize="32sp"/>

    <RelativeLayout
        android:id="@+id/user_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"
        tools:context=".MyProfileFragment">

        <com.taiqiwen.profile.ui.AvatarLayout
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

            <com.taiqiwen.profile.ui.PullToRefeshLayout
                android:id="@+id/pulltorefeshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/avatar"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="user"
                        android:textSize="20sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/credit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="91"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="我的积分"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/collected_area"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/collected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="1"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="我的收藏"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/friends"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="1"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="我的朋友"
                                android:textSize="12sp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray"/>

                    <LinearLayout
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.skydoves.androidribbon.RibbonLayout
                                android:id="@+id/item1"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                app:ribbonLayout_bottom_align="right"
                                app:ribbonLayout_header_align="left">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:foreground="?attr/selectableItemBackground">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        app:cardCornerRadius="10dp"
                                        app:cardElevation="6dp">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="180dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/background01" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </com.skydoves.androidribbon.RibbonLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我拥有的礼物"
                                android:textStyle="bold"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                style="@style/font_size_48"
                                android:textColor="@color/bottom_background"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.skydoves.androidribbon.RibbonLayout
                                android:id="@+id/item2"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                app:ribbonLayout_bottom_align="center"
                                app:ribbonLayout_header_align="left">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        android:foreground="?attr/selectableItemBackground"
                                        app:cardCornerRadius="10dp"
                                        app:cardElevation="6dp">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="180dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/background02" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </com.skydoves.androidribbon.RibbonLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我赠送的礼物"
                                android:textStyle="bold"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                style="@style/font_size_48"
                                android:textColor="@color/bottom_background"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.skydoves.androidribbon.RibbonLayout
                                android:id="@+id/item3"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                app:ribbonLayout_bottom_align="left"
                                app:ribbonLayout_header_align="right">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        android:foreground="?attr/selectableItemBackground"
                                        app:cardCornerRadius="10dp"
                                        app:cardElevation="6dp">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="180dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/background03" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </com.skydoves.androidribbon.RibbonLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的个人信息"
                                android:textStyle="bold"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                style="@style/font_size_48"
                                android:textColor="@color/bottom_background"/>
                        </FrameLayout>


                    </LinearLayout>
                </LinearLayout>
            </com.taiqiwen.profile.ui.PullToRefeshLayout>
        </com.taiqiwen.profile.ui.AvatarLayout>
    </RelativeLayout>


</FrameLayout>

