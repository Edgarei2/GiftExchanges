<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <com.taiqiwen.profile.ui.GiftCardView
            android:id="@+id/giftCard"
            android:layout_width="300dp"
            android:layout_height="200dp"
            card:buttonByText="查看"
            card:buttonCheckText="签收"
            card:cardGiftPrice="520"
            card:cardGiftTitle="礼物卡" />

        <LinearLayout
            android:id="@+id/giftMessage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/giftTitle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/dark"
                style="@style/font_size_54"
                tools:text="xxx赠送给您一件礼物" />


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/giftName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    style="@style/font_size_48"
                    tools:text="礼物x" />
                <Button
                    android:id="@+id/giftDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="礼物详情"
                    android:background="@drawable/button_style" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/dark"
                style="@style/font_size_30"
                android:text="@string/string_auto_sign"/>


        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/avatarLayout">

            <com.taiqiwen.base_framework.ui.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/avatar"
                android:src="@drawable/hugh"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/dark"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutForMeasure"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/font_size_26"
                android:id="@+id/textViewForMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="这里有一些礼物赠语这里有一些礼物赠语这里有一些礼物赠语这里有一些礼物赠语这里有"
                android:textColor="@color/ConstTextInverse"
                android:maxWidth="250dp"
                android:textSize="12sp"
                android:layout_margin="12dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>