<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="commerce_promotion_loading_dialog" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="font_size_24">
        <item name="android:textSize">12dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="font_size_26">
        <item name="android:textSize">13dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="font_size_30">
        <item name="android:textSize">15dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="font_size_32">
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <style name="font_size_34">
        <item name="android:textSize">17dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <style name="font_size_40">
        <item name="android:textSize">20dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <style name="font_size_72">
        <item name="android:textSize">36dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>


    <style name="Theme.SheetSelection" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="sheetSelection_titleStyle">@style/Widget.SheetSelection.Title</item>
        <item name="sheetSelection_itemStyle">@style/Widget.SheetSelection.Item</item>
        <item name="sheetSelection_indicatorStyle">@style/Widget.SheetSelection.Indicator</item>
        <item name="sheetSelection_indicatorColor">#cccccc</item>
    </style>

    <style name="MySheetSelectionStyle"
        parent="Theme.SheetSelection">
        <item name="android:background">@drawable/sheet_style</item>
    </style>

    <style name="Widget.SheetSelection.Title" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:maxHeight">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.SheetSelection.Item" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:maxHeight">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.SheetSelection.Indicator" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:maxWidth">24dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cardBackgroundColor">?attr/sheetSelection_indicatorColor</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Custom.SheetSelection.Title" parent="@style/Widget.SheetSelection.Title">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Custom.SheetSelection.Item" parent="@style/Widget.SheetSelection.Item">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="drawableTint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.0333333333</item>
    </style>

    <style name="Widget.Custom.SheetSelection.Indicator" parent="@style/Widget.SheetSelection.Indicator">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline5" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Theme.Custom.SheetSelection" parent="@style/Theme.SheetSelection">
        <item name="sheetSelection_titleStyle">@style/Widget.Custom.SheetSelection.Title</item>
        <item name="sheetSelection_itemStyle">@style/Widget.Custom.SheetSelection.Item</item>
        <item name="sheetSelection_indicatorStyle">@style/Widget.Custom.SheetSelection.Indicator</item>
        <item name="sheetSelection_indicatorColor">@color/colorAccent</item>
    </style>

</resources>